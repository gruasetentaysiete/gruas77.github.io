---

interface Props {
  id: string;
  title: string;
  width?: number;
  height?: number;
  autoplay?: boolean;
  muted?: boolean;
}
// Tu Id de YouTube es la parte final de la URL del video despu√©s de:  "v="
const {
  id,
  title,
  width = 560,
  height = 315,
  autoplay = false,
  muted = false,
} = Astro.props;

const params = new URLSearchParams();
if (autoplay) params.append("autoplay", "1");
if (muted) params.append("mute", "1");

const embedUrl = `https://www.youtube.com/embed/${id}${params.toString() ? `?${params.toString()}` : ""}`;
---

<div class="video-container">
  <iframe
    width={width}
    height={height}
    src={embedUrl}
    title={title}
    allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
    allowfullscreen></iframe>
</div>

<style>
  .video-container {
    position: relative;
    padding-bottom: 56.25%; /* 16:9 Aspect Ratio */
    height: 0;
    overflow: hidden;
  }

  .video-container iframe {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
  }
</style>
